<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlOptions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/cvCancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:duplicateParentState="true"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/colorApp"
            android:textSize="21sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvLow"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/cvCancel"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cvCancel">

        <TextView
            android:id="@+id/tvLow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:duplicateParentState="true"
            android:gravity="center"
            android:text="@string/low_to_high"
            android:textColor="@color/colorApp"
            android:textSize="21sp"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvHigh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/cvLow"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cvLow"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:id="@+id/tvHigh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:duplicateParentState="true"
            android:gravity="center"
            android:text="@string/high_to_low"
            android:textColor="@color/colorApp"
            android:textSize="21sp"
            android:textStyle="bold"
            android:background="#8CFFFFFF"/>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>


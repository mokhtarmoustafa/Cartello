<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="69dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/ivActive"
            android:fontFamily="Poppins-Medium"
            android:text="253 Soleek Lab , Maadi , Cairo."
            android:textColor="@color/colorLabel"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvAddressType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvAddress"
            android:layout_below="@+id/tvAddress"
            android:layout_marginTop="2dp"
            android:text="Work Address"
            android:textColor="@color/colorWelcome"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvAddress"
            android:layout_alignParentRight="true"
            android:layout_marginRight="26dp"
            android:layout_marginTop="14dp"
            android:clickable="true"
            android:fontFamily="Avenir-Roman"
            android:gravity="center_horizontal"
            android:text="@string/edit_action"
            android:textColor="@color/colorWelcome"

            android:textSize="13sp" />

        <ImageView
            android:id="@+id/ivActive"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="14dp"
            app:srcCompat="@drawable/active" />
    </RelativeLayout>


</android.support.v7.widget.CardView>

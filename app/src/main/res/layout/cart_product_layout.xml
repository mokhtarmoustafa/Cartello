<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/white">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <android.support.v7.widget.CardView
           android:id="@+id/cvProductImage"
           android:layout_width="50dp"
           android:layout_height="52dp"
           android:clickable="true"
           app:cardCornerRadius="6dp"
           android:layout_marginLeft="5dp"
           android:layout_margin="5dp">

           <ImageView
               android:id="@+id/ivProductImage"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/ic_cart" />
       </android.support.v7.widget.CardView>

       <TextView
           android:id="@+id/tvProductName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/product_name"
           android:layout_toRightOf="@+id/cvProductImage"
           android:textColor="@color/colorLabel"
           android:textSize="15sp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="5dp"
           android:maxLines="1"
           android:ellipsize="end"
           android:maxLength="10"/>
       <TextView
           android:id="@+id/tvPrice"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tvProductName"
           android:layout_alignStart="@+id/tvProductName"
           android:textSize="14sp"
           android:textColor="@color/colorWelcome"
           android:text="40LE"
           android:layout_marginTop="2dp"
           />
       <ImageView
           android:id="@+id/ivDelete"
           android:layout_width="14dp"
           android:layout_height="18dp"
           android:src="@drawable/ic_delete"
           android:clickable="true"
           android:layout_toRightOf="@+id/tvProductName"
           android:layout_marginTop="18dp"
           android:layout_marginLeft="19dp"
           />
       <android.support.v7.widget.CardView
           android:id="@+id/cvPrices"
           android:layout_width="109dp"
           android:layout_height="37dp"
           app:cardCornerRadius="8dp"
           android:layout_toRightOf="@+id/ivDelete"
           android:layout_marginTop="8dp"
           android:layout_marginLeft="29dp"
           android:layout_marginRight="7dp"
           app:cardBackgroundColor="@color/colorBack"
           >
           <LinearLayout
               android:id="@+id/lLPrices"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"

               >

               <TextView
                   android:id="@+id/subItem"
                   android:layout_width="36.3dp"
                   android:layout_height="20dp"
                   android:layout_weight="1"
                   android:gravity="center_horizontal"
                   android:src="@mipmap/ic_launcher"
                   android:text="-"
                   android:textColor="@color/colorWelcome"
                   android:textSize="17sp"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="8dp"
                   android:fontFamily="SFProText-Medium"
                   android:clickable="true"
                   />

               <TextView
                   android:id="@+id/tvValue"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:text="100"
                   android:fontFamily="Avenir-Medium"
                   android:textColor="@color/colorAccent"
                   android:textSize="15sp"
                   android:textStyle="bold"
                   android:layout_marginLeft="20.1dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="8dp"
                   />

               <ImageView
                   android:id="@+id/addItem"
                   android:layout_width="36.3dp"
                   android:layout_height="20dp"
                   android:layout_weight="1"
                   android:src="@drawable/add_icon"
                   android:layout_marginLeft="20.1dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="9dp"
                   android:clickable="true"/>
           </LinearLayout>
       </android.support.v7.widget.CardView>
   </RelativeLayout>


</android.support.v7.widget.CardView>

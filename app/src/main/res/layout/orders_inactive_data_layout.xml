<?xml version="1.0" encoding="utf-8"?><!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--android:id="@+id/card_view"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:layout_marginBottom="10dp"--><!--app:cardBackgroundColor="@color/colorApp"--><!--app:cardElevation="0dp">-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/ivProduct"
        android:fontFamily="Poppins-Regular"
        android:text="@string/product_name"
        android:textColor="@color/colorAccent"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvProductName"
        android:layout_below="@+id/tvProductName"
        android:fontFamily="Poppins-Regular"
        android:text="00 LE"
        android:textColor="@color/colorAccent"
        android:textSize="15sp" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="109dp"
        android:layout_height="37dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/colorBack"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">


        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="ArialMT"
            android:gravity="center_horizontal|center_vertical"
            android:text="20"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </android.support.v7.widget.CardView>

</RelativeLayout>

